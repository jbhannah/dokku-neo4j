#!/usr/bin/env bash
export NEO4J_IMAGE=${NEO4J_IMAGE:="thetallgrassnet/alpine-neo4j"}
export NEO4J_IMAGE_VERSION=${NEO4J_IMAGE_VERSION:="2.3.2"}
export NEO4J_ROOT=${NEO4J_ROOT:="/var/lib/dokku/services/neo4j"}

export PLUGIN_COMMAND_PREFIX="neo4j"
export PLUGIN_DATA_ROOT=$NEO4J_ROOT
export PLUGIN_DATASTORE_PORTS=(7474 1337)
export PLUGIN_DEFAULT_ALIAS="NEO4J"
export PLUGIN_ALT_ALIAS="DOKKU_NEO4J"
export PLUGIN_IMAGE=$NEO4J_IMAGE
export PLUGIN_IMAGE_VERSION=$NEO4J_IMAGE_VERSION
export PLUGIN_SCHEME="http"
export PLUGIN_SERVICE="Neo4j"
